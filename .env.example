# RabbitMQ (must match docker-compose in static-site-service)
RABBITMQ_HOST=localhost
RABBITMQ_PORT=5672
RABBITMQ_USER=static_site
RABBITMQ_PASSWORD=static_site
RABBITMQ_QUEUE=site-build-commands
RABBITMQ_RESULTS_QUEUE=site-build-results

# S3 / MinIO (must match docker-compose in static-site-service)
S3_ENDPOINT=http://localhost:9002
S3_REGION=us-east-1
S3_BUCKET=static-site-artifacts
S3_ACCESS_KEY=minioadmin
S3_SECRET_KEY=minioadmin

# Build execution
WORK_DIR=/tmp/static-builder/work
ARTIFACT_DIR=/tmp/static-builder/artifacts
BUILD_DOCKER_IMAGE=node:20-alpine
PREFETCH_COUNT=1
MAX_RETRIES=3
